<div class="searchbar-wrapper">
  <%= form_tag korsearch_path, method: :post, class:"searchform" do %>
    <% unless current_page?(action: 'index') %>
      <%= link_to kor_words_path do %>
        <i class="fas fa-angle-double-left fa-2x"></i>
      <% end %>
    <% end %>
    <%= text_field_tag :search_word, nil , class: "searchbar", placeholder: "Chercher un mot" %>
    <%= button_tag :submit do %>
      <i class='fas fa-search fa-2x'></i>
    <% end %>
  <% end %>
</div>
