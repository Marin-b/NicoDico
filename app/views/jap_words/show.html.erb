<div class="show-wrapper">
  <%= render 'shared/searchbar' %>
  <div class="word-show rectangle">
    <h1><%= @word.word %></h1>
    <i class="fas fa-volume-up orange"></i>
  </div>
  <% @word.nuances.each do |nuance| %>
    <div class="blue-rectangle nuance-box">
      <%= render 'shared/kor_nuance_show', nuance: nuance %>
      <% if user_signed_in? %>
        <%= render partial: 'shared/add_to_list_popup', locals: {listes: @listes, nuance: nuance} %>
        <i class="fas fa-plus-circle fa-2x showListes"></i>
      <% end %>
    </div>
  <% end %>
  <div class="suggestions">
     <h3>Suggerer un mot | Faire part d'une erreur</h3>
  </div>
</div>
