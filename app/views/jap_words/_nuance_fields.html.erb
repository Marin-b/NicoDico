<div class="nested-fields">
  <hr class="hrthick">
  <div class="nuance-header-form">
    <h5>Nuance</h5>
    <div class="iconsActions">
    <% unless (current_page?(new_kor_nuance_path)) %>
      <%= link_to_remove_association f, data: {confirm: 'Are you sure?'} do %>
        <h5>Supprimer nuance</h5>
      <% end %>
    <% else %>
      <br>
    <% end %>
  </div>
  </div>
  <h6>Hanjas</h6>
  <div class="hanja-form">
    <%= f.simple_fields_for :specials do |hanja| %>
      <%= render 'kor_words/hanja_fields', f: hanja %>
    <% end %>
    <div class="iconsActions">
      <%= link_to_add_association f, :specials, partial: "kor_words/hanja_fields"  do %>
        <i class="fas fa-plus-circle fa-2x clickMe"></i>
      <% end %>
    </div>
  </div>
  <hr>
  <h6>Traductions</h6>
  <div class="hanja-form">
    <%= f.simple_fields_for :traductions do |tradu| %>
      <%= render 'kor_words/traduction_fields', f: tradu %>
    <% end %>
    <div class="iconsActions">
      <%= link_to_add_association f, :traductions, partial: "kor_words/traduction_fields"  do %>
        <i class="fas fa-plus-circle fa-2x clickMe"></i>
      <% end %>
    </div>
  </div>
  <hr>
  <div class="flex-around">
    <%= f.input :nature_fr, collection: ["Nom commun", "Verbe transitif", "Verbe intransitif", "Nom propre", "Préposition", "Suffixe", "Adjectif", "Pronom", "Conjonction", "Particule" ] %>
    <%= f.input :nature_cb, collection: ["명사", "타동사", "자동사", "고유명사", "전치사", "접미사", "형용사", "대명사", "접속사", "조사" ], input_html: {readonly: :true} %>
  </div>
  <hr>
  <h6>Registres</h6>
  <div class="exemple-form">
    <%= f.simple_fields_for :registres do |registre| %>
      <%= render 'kor_words/kor_registre_fields', f: registre %>
    <% end %>
    <div class="iconsActions">
      <%= link_to_add_association f, :registres, partial: "kor_words/kor_registre_fields" do%>
        <i class="fas fa-plus-circle fa-2x clickMe"></i>
      <% end %>
    </div>
  </div>
  <hr>
  <%= f.input :user_id, as: :hidden, input_html: { :value => current_user.id } %>
  <%= f.input :remarque %>
  <hr>
  <div class="exemple-form">
    <%= f.simple_fields_for :exemples do |exemple| %>
      <%= render 'kor_words/kor_exemple_fields', f: exemple %>
    <% end %>
    <div class="iconsActions">
      <%= link_to_add_association f, :exemples, partial: "kor_words/kor_exemple_fields"  do%>
        <i class="fas fa-plus-circle fa-2x clickMe"></i>
      <% end %>
    </div>
  </div>
  <hr>
  <%= f.input :commentaire %>
  <hr>
  <h6>Synonymes</h6>
    <div class="exemple-form">
    <%= f.simple_fields_for :synonymes do |synonyme| %>
      <%= render 'kor_words/kor_synonyme_fields', f: synonyme %>
    <% end %>
    <div class="iconsActions">
      <%= link_to_add_association f, :synonymes, partial: "kor_words/kor_synonyme_fields"  do%>
        <i class="fas fa-plus-circle fa-2x clickMe"></i>
      <% end %>
    </div>
  </div>
  <hr>
  <h6>Antonymes</h6>
<div class="exemple-form">
    <%= f.simple_fields_for :antonymes do |antonyme| %>
      <%= render 'kor_words/kor_antonyme_fields', f: antonyme %>
    <% end %>
    <div class="iconsActions">
      <%= link_to_add_association f, :antonymes, partial: "kor_words/kor_antonyme_fields"  do%>
        <i class="fas fa-plus-circle fa-2x clickMe"></i>
      <% end %>
    </div>
  </div>
  <hr>
</div>
